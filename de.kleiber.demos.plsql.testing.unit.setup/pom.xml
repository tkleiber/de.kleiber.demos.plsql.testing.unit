<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>de.kleiber.demos.plsql.testing.unit</groupId>
    <artifactId>de.kleiber.demos.plsql.testing.unit.parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../de.kleiber.demos.plsql.testing.unit.parent</relativePath>
  </parent>
  <artifactId>de.kleiber.demos.plsql.testing.unit.setup</artifactId>
  <version>1.0-SNAPSHOT</version>
  <description>Project for de.kleiber.demos.plsql.testing.unit.setup</description>
  <build>
    <sourceDirectory>src/</sourceDirectory>
    <resources>
      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <id>docker compose up</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <executable>docker</executable>
              <workingDirectory>${project.basedir}</workingDirectory>
              <arguments>
                <argument>compose</argument>
                <argument>up</argument>
                <argument>--detach</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>schema-create</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <executable>docker</executable>
              <arguments>
                <argument>compose</argument>
                <argument>exec</argument>
                <argument>oracle-sqlcl</argument>
                <argument>sql</argument>
                <argument>${db.systemuser}/${db.systempassword}@//oracle-free/${db.service}</argument>
                <argument>@/opt/oracle/sql_scripts/de.kleiber.demos.plsql.testing.unit.setup/create.sql</argument>
                <argument>${db.user}</argument>
                <argument>${db.password}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>wait-for-java-home</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <executable>docker</executable>
              <arguments>
                <argument>compose</argument>
                <argument>exec</argument>
                <argument>oracle-free</argument>
                <argument>bash</argument>
                <argument>-c</argument>
                <argument>/container-entrypoint-initdb.d/03_check_for_java_home.sh</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
